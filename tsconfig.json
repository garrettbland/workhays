{
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "preserve",
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "incremental": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        ".next/types/**/*.ts",
        "**/*.ts",
        "**/*.tsx",
        "src/http/get-v1-jobs/index.mjs",
        "src/http/get-v1/index.mjs",
        "src/shared/__tests__/validEmail.test.js"
    ],
    "exclude": ["node_modules"]
}
