{
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "preserve",
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "incremental": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@components": ["packages/next/components"],
            "@components/*": ["packages/next/components/*"],
            "@custom-types": ["src/types"],
            "@custom-types/*": ["src/types/*"],
            "@utils": ["src/utils"],
            "@utils/*": ["src/utils/*"]
        }
    },
    "include": [
        "packages/web/next-env.d.ts",
        ".next/types/**/*.ts",
        "**/*.ts",
        "**/*.tsx",
        "packages/utilities/demo/app.ts"
    ],
    "exclude": ["node_modules"]
}
