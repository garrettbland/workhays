<div class="col-span-1 md:col-span-2 px-4 md:px-0">
    <ul class="flex flex-col">
        <li>
            <a href="/admin/dashboard" class="flex items-center hover:bg-gray-200 rounded p-2 block <%= req.path === '/admin/dashboard' ? 'text-blue-500 bg-gray-100' : 'text-gray-700' %>">
                <i data-feather="home" class="w-4 h-4 mr-2"></i>
                Dashboard 
            </a>
        </li>
        <% if(user.status === 'verified') { %>
            <li>
                <a href="/admin/jobs" class="flex items-center hover:bg-gray-200 rounded p-2 block <%= req.path === '/admin/jobs' ? 'text-blue-500 bg-gray-100' : 'text-gray-700' %>">
                    <i data-feather="briefcase" class="w-4 h-4 mr-2"></i>
                    Jobs
                </a>
            </li>
        <% } %>
        <li>
            <a href="/admin/business" class="flex items-center hover:bg-gray-200 rounded p-2 block <%= req.path === '/admin/business' ? 'text-blue-500 bg-gray-100' : 'text-gray-700' %>">
                <i data-feather="map-pin" class="w-4 h-4 mr-2"></i>
                Business Profile
            </a>
        </li>
        <li>
            <a href="/admin/profile" class="flex items-center hover:bg-gray-200 rounded p-2 block <%= req.path === '/admin/profile' ? 'text-blue-500 bg-gray-100' : 'text-gray-700' %>">
                <i data-feather="user" class="w-4 h-4 mr-2"></i>
                Profile
            </a>
        </li>
        <% if(user.role === 'admin') { %>
            <div class="mt-8">
                ADMIN LINKS
            </div>
            <li>
                <a href="/admin/admin_users" class="flex items-center hover:bg-gray-200 rounded p-2 block <%= req.path === '/admin/admin_users' ? 'text-blue-500 bg-gray-100' : 'text-gray-700' %>">
                    <i data-feather="users" class="w-4 h-4 mr-2"></i>
                    Users
                </a>
            </li>
            <li>
                <a href="/admin/admin_employers" class="flex items-center hover:bg-gray-200 rounded p-2 block <%= req.path === '/admin/admin_employers' ? 'text-blue-500 bg-gray-100' : 'text-gray-700' %>">
                    <i data-feather="users" class="w-4 h-4 mr-2"></i>
                    Employers
                </a>
            </li>
            <li>
                <a href="/admin/admin_jobs" class="flex items-center hover:bg-gray-200 rounded p-2 block <%= req.path === '/admin/admin_jobs' ? 'text-blue-500 bg-gray-100' : 'text-gray-700' %>">
                    <i data-feather="users" class="w-4 h-4 mr-2"></i>
                    Jobs
                </a>
            </li>
        <% } %>
    </ul>
</div>