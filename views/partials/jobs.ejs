<% /*
===========================================================================

Description:
This is the job listings section. Contains all job listings.

To Do:

Params:
- jobs : ARRAY

===========================================================================
*/ %>
<div class="justify-between items-center flex">
	<div class="p-4">
		<h2>Current Job Listings</h2>
	</div>
</div>

<% jobs.forEach(function(job) { %>
	<div class="mt-1 mb-1 p-2 pl-4 pr-4 bg-white border-gray-200 shadow-lg mx-auto max-w-5xl rounded">
		<div class="flex justify-between">
			<div class="flex flex-col">
				<div class="text-xl font-semibold"><%= job.title %></div>
				<div class="flex flex-row italic text-gray-600 text-sm">
					<div>Employer: <a class="text-blue-500 hover:text-blue-400 mr-1"
														href="/employers/<%= job.employer.id %>?from=/&title=All%20Jobs"><%= job.employer.title %></a>
					</div>
					<div>Updated:<%= moment
							.utc(job.updatedAt)
							.local()
							.format('MM/DD/YYYY, h:mm a') %></div>
				</div>
			</div>
			<div class="flex items-center"><a href="/jobs/<%= job.id %>"
																				class="px-2 py-2 bg-transparent text-blue-500 cursor-pointer
                hover:bg-blue-400 focus:bg-blue-400 rounded text-sm focus:outline-none border border-blue-500 hover:border-transparent hover:text-white">View
					Listing</a></div>
		</div>
	</div>
<% }) %>

<div class="px-4 py-3 flex items-center justify-between sm:px-6">
	<div class="hidden sm:block">
		<p class="text-sm leading-5 text-gray-700">
			Showing
			<span class="font-medium"><%= jobs.length %></span>
			of
			<span class="font-medium"><%= count %></span>
			results
		</p>
	</div>
	<div class="flex-1 flex justify-between sm:justify-end">
		<div>
			<% if(current_page <= pages && current_page !== 1) { %>
				<a href="/?page=<%= current_page - 1 %>"
					 class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150">
					Previous
				</a>
			<% } %>
		</div>
		<div>
			<% if(current_page < pages) { %>
				<a href="/?page=<%= current_page + 1 %>"
					 class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150">
					Next
				</a>
			<% } %>
		</div>
	</div>
</div>
