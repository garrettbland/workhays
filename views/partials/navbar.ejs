<div x-data="menu()" class="w-full bg-white">
	<div class="max-w-4xl mx-auto flex justify-between items-center py-3 px-3 lg:px-0">

		<!-- logo -->
		<a href="/" class="text-lg">
			<span class="font-light text-gray-600">Work</span><span class="font-bold">hays</span>
		</a>

		<!-- mobile menu button-->
		<div class="block lg:hidden">
			<button x-on:click="open()" class="flex items-center">
				<span class="mr-2">
					Menu
				</span> 
				<svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
			</button>
		</div>

		<!-- mobile menu -->
		<div x-show.transition.in.opacity.scale.100.duration.300.out.scale.100.opacity.duration.400="show" class="h-screen w-screen bg-overlay-500 fixed top-0 left-0 z-40">
			<div x-show.transition.in.duration.100ms.origin.top.right.opacity.scale.85.out.duration.200ms.origin.bottom.left.opacity.scale.95="show" class="bg-white rounded shadow-lg m-3 overflow-x-scroll p-3">
				<div class="flex justify-between items-center mb-4">
					<!-- logo -->
					<a href="/" class="text-lg">
						<span class="font-light text-gray-600">Work</span><span class="font-bold">hays</span>
					</a>
					<!-- close x -->
					<button x-on:click="close()">
						<svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
					</button>
				</div>
				<ul class="flex flex-col">
					<li>
						<a href="/" class="p-2 hover:bg-gray-200 transition ease-in-out duration-150 rounded <%= activeUrl === '' ? 'text-blue-500' : 'text-gray-900' %>">
							Jobs
						</a>
					</li>
					<li>
						<a href="/employers" class="p-2 hover:bg-gray-200 transition ease-in-out duration-150 rounded <%= activeUrl === 'employers' ? 'text-blue-500' : 'text-gray-900' %>">
							Employers
						</a>
					</li>
					<li>
						<a href="/about" class="p-2 hover:bg-gray-200 transition ease-in-out duration-150 rounded <%= activeUrl === 'about' ? 'text-blue-500' : 'text-gray-900' %>">
							About
						</a>
					</li>
					<li>
						<a href="/contact" class="p-2 hover:bg-gray-200 transition ease-in-out duration-150 rounded <%= activeUrl === 'contact' ? 'text-blue-500' : 'text-gray-900' %>">
							Contact
						</a>
					</li>
					<li>
						<a href="/signup" class="p-2 hover:bg-gray-200 transition ease-in-out duration-150 rounded <%= activeUrl === 'signup' ? 'text-blue-500' : 'text-gray-900' %>">
							Sign Up
						</a>
					</li>
					<li>
						<a href="/signin" class="p-2 hover:bg-gray-200 transition ease-in-out duration-150 rounded <%= activeUrl === 'signin' ? 'text-blue-500' : 'text-gray-900' %>">
							Sign In
						</a>
					</li>
				</ul>
			</div>
		</div>

		<!-- menu -->
		<div class="hidden lg:block">
			<ul class="flex flex-row items-center">
				<li>
					<a href="/" class="p-2 hover:bg-gray-200 transition ease-in-out duration-150 rounded <%= activeUrl === '' ? 'text-blue-500' : 'text-gray-900' %>">
						Jobs
					</a>
				</li>
				<li>
					<a href="/employers" class="p-2 hover:bg-gray-200 transition ease-in-out duration-150 rounded <%= activeUrl === 'employers' ? 'text-blue-500' : 'text-gray-900' %>">
						Employers
					</a>
				</li>
				<li>
					<a href="/about" class="p-2 hover:bg-gray-200 transition ease-in-out duration-150 rounded <%= activeUrl === 'about' ? 'text-blue-500' : 'text-gray-900' %>">
						About
					</a>
				</li>
				<li>
					<a href="/contact" class="p-2 hover:bg-gray-200 transition ease-in-out duration-150 rounded <%= activeUrl === 'contact' ? 'text-blue-500' : 'text-gray-900' %>">
						Contact
					</a>
				</li>
				<li>
					<a href="/signup" class="p-2 hover:bg-gray-200 transition ease-in-out duration-150 rounded <%= activeUrl === 'signup' ? 'text-blue-500' : 'text-gray-900' %>">
						Sign Up
					</a>
				</li>
				<li>
					<a href="/signin" class="p-2 hover:bg-gray-200 transition ease-in-out duration-150 rounded <%= activeUrl === 'signin' ? 'text-blue-500' : 'text-gray-900' %>">
						Sign In
					</a>
				</li>
			</ul>
		</div>
	</div>
</div>

<script>
	function menu() {
		return {
			show: false,
			open: function () {
				this.show = true
			},
			close: function () {
				this.show = false
			}
		}
	}
</script>

















<div class="w-full flex z-10 bg-white justify-between items-center p-2 border-b-2 shadow-md">
	<a href="/">
		<div class="flex flex-row items-center">
			<div class="mr-2"><span class="mdi mdi-briefcase-outline text-5xl text-blue-500"></span></div>
			<h2><span class="font-light text-gray-600">WORK</span><span class="font-bold">hays</span></h2></div>
	</a>
	<div class="flex flex-row justify-center items-center">
		<a title="Home" href="/"
			 class="hover:text-blue-400 text-blue-500 focus:outline-none mr-4 text-lg">Home</a>
		<a title="Employers" href="/employers"
			 class="hover:text-blue-400 text-blue-500 focus:outline-none mr-4 text-lg">Employers</a>
		<a title="Events" href="/events"
			 class="hover:text-blue-400 text-blue-500 focus:outline-none mr-4 text-lg">Events
		</a>
		<a title="Information" href="/info"
			 class="hover:text-blue-400 text-blue-500 focus:outline-none mr-4 text-lg">Info
		</a>
		<a title="Help" href="/help"
			 class="hover:text-blue-400 text-blue-500 focus:outline-none mr-4 text-lg">Help
		</a>
		<a title="Contact" href="/contact"
			 class="hover:text-blue-400 text-blue-500 focus:outline-none mr-4 text-lg">Contact
		</a>
		<% if (user) { %>
			<div>
				<div class="flex flex-row">
					<div class="relative mr-4" x-data="{ open: false }">
						<button @click="open = !open"
										class="focus:outline-none flex flex-row items-center">
							<span class="mdi mdi-account-circle text-4xl text-blue-500 hover:text-blue-400"></span>
						</button>
						<ul x-show="open"
								@click.away="open = false"
								class="w-32 bg-white shadow-lg border rounded absolute right-0">
							<li class="px-2 py-1">
								<span class="text-lg text-blue-500 focus:outline-none">
									Hi, <%= user.first_name %>
								</span>
							</li>
							<a href="/job-listing-new">
								<li class="hover:bg-gray-100 cursor-pointer px-2 py-1 text-lg text-green-500 focus:outline-none">
									New Listing
								</li>
							</a>
							<a href="/account">
								<li class="hover:bg-gray-100 cursor-pointer px-2 py-1 text-lg text-blue-500 focus:outline-none">
									Account
								</li>
							</a>
							<a href="/logout">
								<li class="hover:bg-gray-100 cursor-pointer px-2 py-1 text-lg text-red-500 focus:outline-none">
									Sign Out
								</li>
							</a>
						</ul>
					</div>
				</div>
			</div>
		<% } else { %>
			<a href="/signup">
				<button class="mr-2 bg-blue-500 px-4 py-2 rounded hover:bg-blue-400 text-white focus:outline-none text-lg">Sign
					Up
				</button>
			</a>
			<a href="/signin">
				<button class="bg-green-500 px-4 py-2 rounded hover:bg-green-400 text-white focus:outline-none text-lg">Sign In
				</button>
			</a>
		<% } %>
	</div>

</div>