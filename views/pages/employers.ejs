<%- include('../partials/page_start', {title:'Employers', description: 'Browse all of the currently registered employers with Work Hays and contact information.'}) %>

<div class="max-w-4xl mx-auto px-4 lg:px-0">
        <div class="bg-white shadow-md rounded -mt-8 overflow-hidden">
            <ul>
                <% employers.forEach(function(employer,index) { %>
                    <li class="<%= index === 0 ? 'border-t-none' : 'border-t-2' %> border-gray-100 hover:bg-gray-50 hover:text-blue-600 transform transition ease-in-out duration-75 group">
                        <a href="/employers/<%= employer.id %>" class="block w-full p-4 flex justify-between items-center">
                            <div class="w-4/5 transform transition ease-in-out duration-150 group-hover:translate-x-1">
                                <div class="text-xs text-gray-500 leading-none">
                                    <%= employer.title %>
                                </div>
                                <div class="font-bold truncate">
                                    <%= employer.title %>
                                </div>
                            </div>
                            <div class="flex flex-1 items-center justify-end">
                                <span class="text-sm antialiased mr-2 hidden md:inline-block">
                                    
                                </span>
                                <i data-feather="arrow-right" class=""></i>
                            </div>
                        </a>
                    </li>
                <% }) %>
            </ul>
        </ul>
    </div>
</div>

<div class="max-w-4xl mx-auto">
    <div class="my-6">
        <div class="border lg:border-none border-gray-200">
            <ul>
                <% employers.forEach(function(employer,index) { %> <% if
                (employer.title ) { %>
                <li>
                    <a
                        href="/employers/<%= employer.id %>"
                        class="bg-white flex flex-row justify-between items-center px-3 py-3 lg:py-2 lg:mb-2 border-gray-200 hover:cursor transition ease-in-out duration-75 group lg:rounded lg:shadow-md z-30 <%= index !== 0 ? 'border-t lg:border-none' : null%>"
                    >
                        <div
                            class="flex flex-1 flex-row items-center overflow-hidden"
                        >
                            <div>
                                <div
                                    class="font-bold text-black truncate lg:text-lg group-hover:text-blue-500 group-hover:underline"
                                >
                                    <%= employer.title %>
                                </div>
                                <div
                                    class="antialiased flex flex-row truncate text-gray-800"
                                >
                                    <div>
                                        <div class="flex items-center">
                                            <i
                                                data-feather="user"
                                                class="w-4 h-4 mr-2 text-gray-500"
                                            ></i>
                                            <span><%= employer.contact %></span>
                                        </div>
                                    </div>
                                    <div class="mx-2 text-gray-500">
                                        |
                                    </div>
                                    <div>
                                        <div class="flex items-center">
                                            <i
                                                data-feather="phone"
                                                class="w-4 h-4 mr-2 text-gray-500"
                                            ></i>
                                            <span><%= employer.phone %></span>
                                        </div>
                                    </div>
                                    <div class="mx-2 text-gray-500">
                                        |
                                    </div>
                                    <div>
                                        <div class="flex items-center">
                                            <i
                                                data-feather="mail"
                                                class="w-4 h-4 mr-2 text-gray-500"
                                            ></i>
                                            <span><%= employer.email %></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="flex justify-end items-center">
                            <div
                                class="transition ease-in-out duration-75 text-white group-hover:text-gray-600 text-sm mr-2 hidden lg:block"
                            >
                                View Details
                            </div>
                            <i data-feather="chevron-right" class=""></i>
                        </div>
                    </a>
                </li>
                <% } %> <% }) %>
            </ul>
        </div>
    </div>
</div>

<%- include('../partials/page_end') %>
