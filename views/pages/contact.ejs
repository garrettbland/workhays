<%- include('../partials/page_start', {title: 'Contact'}) %>

<div class="max-w-4xl mx-auto my-24">

	<div class="bg-white rounded-none md:rounded shadow-md w-full sm:max-w-2xl mx-auto overflow-hidden">
		<div class="border-b border-gray-200 p-3">
			<div class="text-xl font-bold leading-6">
				ðŸ‘‹ Contact Us
			</div>
			<div class="antialiased">
				Please fill out the following form to contact us. We will try to respond as soon
				as we can.
			</div>
		</div>
		<form method="post" action="/contact" class="flex flex-wrap p-3">
			<div class="w-full md:w-1/2 mb-1 md:pr-1">
				<div class="text-sm text-gray-600 mb-1">
					First Name
				</div>
				<input class="mr-0 mb-3 w-full rounded border border-gray-200 px-3 py-2 bg-gray-100 focus:bg-white focus:border-blue-500 transition ease-in-out duration-150 focus:outline-none" name="first" type="text" placeholder="Jane" />
			</div>
			<div class="w-full md:w-1/2 mb-1 md:pl-1">
				<div class="text-sm text-gray-600 mb-1">
					Last Name
				</div>
				<input placeholder="Doe" name="last" type="text" class="mr-0 mb-3 lg:mb-0 w-full rounded border border-gray-200 px-3 py-2 bg-gray-100 focus:bg-white focus:border-blue-500 transition ease-in-out duration-150 focus:outline-none" />
      		</div>
      		<div class="w-full md:w-1/2 md:pr-1">
				<div class="text-sm text-gray-600 mb-1">
					Email Address
				</div>
				<input placeholder="Email Address" name="email" type="text" class="mr-0 mb-3 lg:mb-0 w-full rounded border border-gray-200 px-3 py-2 bg-gray-100 focus:bg-white focus:border-blue-500 transition ease-in-out duration-150 focus:outline-none" />
      		</div>
      		<div class="w-full md:w-1/2 md:pl-1">
				<div class="text-sm text-gray-600 mb-1">
					Phone Number
				</div>
				<input placeholder="(123) 456-7890" name="phone" type="text" class="mr-0 mb-3 lg:mb-0 w-full rounded border border-gray-200 px-3 py-2 bg-gray-100 focus:bg-white focus:border-blue-500 transition ease-in-out duration-150 focus:outline-none" />
			</div>
			<div class="w-full mt-3">
				<div class="text-sm text-gray-600 mb-1">
					Message
				</div>
				<textarea rows="3" name="message" class="appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 rounded py-2 px-3 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-blue-400 focus:outline-none" placeholder="Please tell us a little bit about how we can help you."></textarea>
			</div>
			<div class="w-full mt-5 lg:mt-0">
				<div class="flex flex-row justify-end items-center">
					<button type="submit" class="w-full lg:w-auto bg-green-500 text-white hover:bg-green-600 transition duration-75 ease-in-out rounded px-6 py-2 border border-green-500 hover:border-green-600 focus:outline-none">
						Submit
					</button>
				</div>
			</div>
		</form>
	</div>
</div>

<%- include('../partials/page_end') %>
