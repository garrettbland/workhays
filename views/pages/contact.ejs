<% /* ===========================================================================
Description: Employer Inquiry page to request access to site. To Do: Params:
=========================================================================== */ %>
<%- include('../partials/page_start', {title: 'Contact'}) %>

<main
	class="flex-1 mx-auto pt-32 container max-w-6xl p-12 bg-gray-200 shadow-xl"
>
	<a href="/" class="flex w-1/4 mb-4 flex-row items-center text-blue-500 hover:text-blue-400 text-base">
		<div><span class="mdi mdi-arrow-left"/></div>
		<div class="ml-2">Back to All Listings</div>
	</a>
	<h2>Contact Us</h2>
	<div class="flex justify-center items-center">
		<div class="flex flex-col max-w-3xl ">
			<div class="mb-8 text-base">
				To contact Work Hays, please fill out the information below and we will respond as soon as possible. Thank you! -Work Hays Support
			</div>
			<form method="POST" action="/contact"
						class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
				<div>
					<div class="flex flex-wrap -mx-3 mb-6">
						<div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
							<label
								class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
								for="grid-first-name"
							>
								First Name
							</label>
							<input
								class="text appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-blue-400"
								id="username"
								name="first"
								type="text"
								placeholder="Jane"
							/>
						</div>
						<div class="w-full md:w-1/2 px-3">
							<label
								class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
								for="grid-last-name"
							>
								Last Name
							</label>
							<input
								class="text appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-blue-400"
								id="username"
								name="last"
								type="text"
								placeholder="Doe"
							/>
						</div>
					</div>
					<div class="flex flex-wrap -mx-3 mb-6">
						<div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
							<label
								class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
								for="grid-email"
							>
								Email
							</label>
							<input
								class="text appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-blue-400"
								id="username"
								name="email"
								type="email"
								placeholder="Email Address"
							/>
						</div>
						<div class="w-full md:w-1/2 px-3">
							<label
								class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
								for="phone-number"
							>
								Phone Number
							</label>
							<input
								class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-blue-400"
								id="password"
								name="phone"
								type="phone-number"
								placeholder="(785) 867-5309"
							/>
						</div>
					</div>
					<div class="flex flex-wrap -mx-3 mb-6">
						<div class="w-full px-3">
							<label
								class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
								for="grid-inquiry"
							>
								Message
							</label>
							<textarea
								name="message"
								class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-blue-400"
								id="grid-contact-inquiry"
								rows="3"
								placeholder="Please tell us a little bit about how we can help you."
							></textarea>
						</div>
					</div>
				</div>
				<div class="flex justify-end mt-4">
					<button
						type="submit" value=""
						class="bg-green-500 hover:bg-green-400 px-4 py-2 rounded text-white focus:outline-none "
					>
						Submit
					</button>
				</div>
			</form>
		</div>
	</div>
</main>

<%- include('../partials/page_end') %>
