<%- include('../partials/page_start', {title:'Sign In'}) %>

<div class="max-w-4xl mx-auto my-24">
	<div class="bg-white rounded-none md:rounded shadow-md w-full sm:max-w-sm mx-auto overflow-hidden">
		<div class="bg-white border-b border-gray-200 p-3">
			<div class="text-xl font-bold leading-6">
				üîê Sign In
			</div>
			<div class="antialiased">
				Sign in to manage your work place job listings.
			</div>
		</div>
		<form action="signin" method="post" id="signin" name="signin" class="flex flex-wrap p-3">
			<div class="w-full mb-1">
				<div class="text-sm text-gray-600 mb-1">
					Email Address
				</div>
				<input class="mr-0 mb-3 w-full rounded border border-gray-200 px-3 py-2 bg-gray-100 focus:bg-white focus:border-blue-500 transition ease-in-out duration-150" name="email" type="text" placeholder="Email Address" />
			</div>
			<div class="w-full mb-5">
				<div class="text-sm text-gray-600 mb-1">
					Password
				</div>
				<input placeholder="********" name="password" type="password" class="mr-0 mb-3 lg:mb-0 w-full rounded border border-gray-200 px-3 py-2 bg-gray-100 focus:bg-white focus:border-blue-500 transition ease-in-out duration-150" />
			</div>
			<div class="w-full">
				<div class="flex flex-row flex-wrap items-center justify-between">
					<button type="submit" class="w-full lg:w-auto bg-green-500 text-white hover:bg-green-600 transition duration-75 ease-in-out rounded px-6 py-2 border border-green-500 hover:border-green-600">
						Sign In
					</button>
					<a class="text-center mt-5 lg:mt-0 lg:text-right w-full lg:w-auto text-sm text-blue-500 hover:underline transition ease-in-out duration-75 " href="/password-reset">
						Forgot Password?
					</a>
				</div>
			</div>
		</form>
	</div>
</div>

<%- include('../partials/page_end') %>