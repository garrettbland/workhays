<!DOCTYPE html>
<html class="h-full" lang="en">

<body class='flex w-full flex-col h-full'>
	<nav>
		<%- include('../partials/navbar', { title: 'Work Hays' }) %>
	</nav>

	<main class="flex-1 mx-auto pt-32 container max-w-6xl p-12 bg-gray-200 shadow-xl">
		<% if(req.query.from) { %>
			<a href="<%= req.query.from %>">
				<div class="flex flex-row items-center text-blue-500 hover:text-blue-400 text-base">
					<div><span class="mdi mdi-arrow-left" /></div>
					<div class="ml-2">
						Back to <%= req.query.title %>
					</div>
				</div>
			</a>
		<% } else { %>
			<a href="/employers">
					<div class="flex flex-row items-center text-blue-500 hover:text-blue-400 text-base">
						<div><span class="mdi mdi-arrow-left" /></div>
						<div class="ml-2">
							Back to all employers
						</div>
					</div>
				</a>
		<% } %>
		<div class="flex flex-col pt-10">
			<div class="flex flex-row items-center">
				<% if(employer.logo_url) { %>
					<img src="<%= employer.logo_url %>" class="flex h-10 mr-4 w-auto" />
				<% } else { %>
					<span class="mdi mdi-briefcase-outline text-5xl text-blue-500"></span>
				<% } %>
				<h2><%= employer.title %></h2>
			</div>
			<div class="flex flex-row italic text-gray-700 text-sm">
				<div class="flex items-center">
					<% if(employer.contact.length > 1) { %>
						<div class="flex items-center"><i class="mdi mdi-account-tie mr-1 text-xl text-gray-500"></i><span
								class="mr-4"><%= employer.contact %></span></div>
					<% } %>
					<% if(employer.phone.length > 1) { %>
						<div class="flex items-center"><i class="mdi mdi-phone-classic mr-1 text-xl text-gray-500"></i><span
								class="mr-4"><%= employer.phone %></span>
						</div>
					<% } %>
					<% if(employer.email.length > 1) { %>
						<div class="flex items-center"><i
								class="mdi mdi-email mr-1 text-xl text-gray-500"></i><%= employer.email %>
						</div>
					<% } %>
				</div>
			</div>
			<div class="mt-10 text-base">
				<p><%- employer.description %></p>
			</div>
		</div>
	</main>

	<footer class="text-center bg-gray-200 container pb-8 max-w-6xl shadow-xl mx-auto pin-b">
		<%- include('../partials/footer') %>
	</footer>
</body>

</html>