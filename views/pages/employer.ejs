<% /* ===========================================================================
Description: Employer business information page. To Do: Params:
=========================================================================== */ %>
<%- include('../partials/page_start', {title: employer.title}) %>

<div class="max-w-4xl mx-auto my-24">

	<div class="bg-white rounded-none md:rounded shadow-md w-full overflow-hidden">
		<div class="p-4 bg-cover h-32 bg-center bg-no-repeat" style="background-image: url('https://images.unsplash.com/photo-1562178240-396a314759b2?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80')">
			<div class="w-24 h-24 rounded-full shadow-md overflow-full bg-gray-100 bg-cover bg-center bg-repeat-none" style="background-image: url('https://www.logodesignlove.com/images/monograms/tesla-symbol.jpg')">
				
			</div>
		</div>
		<div class="border-b border-gray-200 p-3 flex flex-wrap justify-between items-center">
			<div class="w-full md:w-4/5">
				<div class="text-xl font-bold leading-6">
					<%= employer.title %>
				</div>
				<div class="antialiased mb-3 md:mb-2">
					Employer Contact: <%= employer.contact %>
				</div>
				<div class="flex items-center flex-row flex-wrap">
					<% if (employer.phone) { %>
						<a href="tel:<%= employer.phone %>" class="flex items-center flex-row justify-center w-full md:w-auto text-blue-500 hover:bg-blue-500 transition duration-75 ease-in-out rounded px-4 py-2 md:py-1 md:text-sm border border-blue-500 hover:border-blue-500 text-center hover:text-white text-sm md:mr-3 mb-3 md:mb-0">
							<span>
								<svg class="w-4 h-4 mr-1" viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="1.4" fill="none" stroke-linecap="round" stroke-linejoin="round" ><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>	
							</span>
							<span class="flex md:hidden">
								Call
							</span>
							<span class="hidden md:flex">
								<%= employer.phone %>
							</span>
						</a>
					<% } %>
					<% if (employer.email) { %>
						<a href="mailto:<%= employer.email %>" class="flex items-center flex-row justify-center w-full md:w-auto text-blue-500 hover:bg-blue-500 transition duration-75 ease-in-out rounded px-4 py-2 md:py-1 md:text-sm border border-blue-500 hover:border-blue-500 text-center hover:text-white text-sm md:mr-3 mb-3 md:mb-0">
							<span>
								<svg class="w-4 h-4 mr-1" viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="1.4" fill="none" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>	
							</span>
							<span class="flex md:hidden">
								Email
							</span>
							<span class="hidden md:flex">
								<%= employer.email %>
							</span>
						</a>
					<% } %>
					<% if (employer.website_url) { %>
						<a target="_blank" href="<%= employer.website_url %>" class="flex items-center flex-row justify-center w-full md:w-auto text-blue-500 hover:bg-blue-500 transition duration-75 ease-in-out rounded px-4 py-2 md:py-1 md:text-sm border border-blue-500 hover:border-blue-500 text-center hover:text-white text-sm md:mr-3 mb-3 md:mb-0">
							<span>	
								<svg class="w-4 h-4 mr-1" viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="1.4" fill="none" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>
							</span>
							<span class="flex md:hidden">
								Visit Website
							</span>
							<span class="hidden md:flex">
								<%= employer.website_url %>
							</span>
						</a>
					<% } %>
				</div>
			</div>
		</div>
		<div class="p-3">
			<div class="flex flex-wrap w-full">
				<div class="w-full">
					<div class="text-sm leading-5 font-medium text-gray-500">
						About Us
					</div>
					<div class="mt-1 text-base leading-6 text-gray-900">
						<p><%- employer.description %></p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<%- include('../partials/page_end') %>