<%- include('../partials/page_start', {title: 'Sign Up'}) %>

<div class="max-w-4xl mx-auto my-24">

	<div class="bg-white rounded-none md:rounded shadow-md w-full sm:max-w-2xl mx-auto overflow-hidden">
		<div class="border-b border-gray-200 p-3">
			<div class="text-xl font-bold leading-6">
				📝 Sign Up
			</div>
			<div class="antialiased">
				Please fill out the following form and submit to request account access. Once submitted, we will review your information and get your new account verified. If you have questions, please <a class="text-blue-500 hover:underline" href="/contact">contact us</a>.
			</div>
		</div>
		<form action="signup" method="post" id="signup" name="signup" class="flex flex-wrap p-3">
			<div class="w-full md:w-1/2 mb-1 md:pr-1">
				<div class="text-sm text-gray-600 mb-1">
					First Name
				</div>
				<input class="mr-0 mb-3 w-full rounded border border-gray-200 px-3 py-2 bg-gray-100 focus:bg-white focus:border-blue-500 transition ease-in-out duration-150 focus:outline-none" name="first_name" type="text" placeholder="Jane" />
			</div>
			<div class="w-full md:w-1/2 mb-1 md:pl-1">
				<div class="text-sm text-gray-600 mb-1">
					Last Name
				</div>
				<input placeholder="Doe" name="last_name" type="text" class="mr-0 mb-3 lg:mb-0 w-full rounded border border-gray-200 px-3 py-2 bg-gray-100 focus:bg-white focus:border-blue-500 transition ease-in-out duration-150 focus:outline-none" />
      </div>
      <div class="w-full md:w-1/2 mb-1 md:pr-1">
				<div class="text-sm text-gray-600 mb-1">
					Email Address
				</div>
				<input placeholder="Email Address" name="email" type="text" class="mr-0 mb-3 lg:mb-0 w-full rounded border border-gray-200 px-3 py-2 bg-gray-100 focus:bg-white focus:border-blue-500 transition ease-in-out duration-150 focus:outline-none" />
      </div>
      <div class="w-full md:w-1/2 mb-1 md:pl-1 mb-5">
				<div class="text-sm text-gray-600 mb-1">
					Password
				</div>
				<input placeholder="*******" name="password" type="text" class="mr-0 mb-3 lg:mb-0 w-full rounded border border-gray-200 px-3 py-2 bg-gray-100 focus:bg-white focus:border-blue-500 transition ease-in-out duration-150 focus:outline-none" />
			</div>
			<div class="w-full">
				<div class="flex flex-row justify-end items-center">
					<button type="submit" class="w-full lg:w-auto bg-green-500 text-white hover:bg-green-600 transition duration-75 ease-in-out rounded px-6 py-2 border border-green-500 hover:border-green-600">
						Create Account
					</button>
				</div>
			</div>
		</form>
	</div>
	<div class="antialiased text-center mt-5 text-gray-700">
		Already have an account? <a href="/signin" class="text-blue-500 hover:underline">Click here</a> to sign in.
  </div>
</div>

<%- include('../partials/page_end') %>