<% /* ===========================================================================
Description: Employer Inquiry page to request access to site. To Do: Params:
=========================================================================== */ %>
<!DOCTYPE html>
<html class="h-full" lang="en">
<body class="flex w-full flex-col h-full">
<nav>
	<%- include('../partials/navbar', { title: 'Work Hays' }) %>
</nav>

<main
	class="flex-1 mx-auto pt-32 container max-w-6xl p-12 bg-gray-200 shadow-xl"
>
	<a href="/" class="flex w-1/4 mb-4 flex-row items-center text-blue-500 hover:text-blue-400 text-base">
		<div><span class="mdi mdi-arrow-left"/></div>
		<div class="ml-2">Back to All Listings</div>
	</a>
	<div class="flex justify-center items-center">
		<div class="flex flex-col max-w-3xl ">
			<div class="mb-8 text-base">
				Please fill out the following form and submit to request account
				access. Once submitted, we will review your information and get your
				new account verified. If you have questions, please email
				support@workhays.com.
			</div>
			<form id="signup" name="signup" method="post" action="/signup"
						class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
				<div>
					<div class="flex flex-wrap -mx-3 mb-6">
						<div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
							<label
								class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
								for="grid-first-name"
							>
								First Name
							</label>
							<input
								class="text appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
								id="username"
								name="first_name"
								type="text"
								placeholder="Jane"
							/>
						</div>
						<div class="w-full md:w-1/2 px-3">
							<label
								class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
								for="grid-last-name"
							>
								Last Name
							</label>
							<input
								class="text appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
								id="username"
								name="last_name"
								type="text"
								placeholder="Doe"
							/>
						</div>
					</div>
					<div class="flex flex-wrap -mx-3 mb-6">
						<div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
							<label
								class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
								for="grid-email"
							>
								Email
							</label>
							<input
								class="text appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
								id="username"
								name="email"
								type="email"
								placeholder="Email Address"
							/>
						</div>
						<div class="w-full md:w-1/2 px-3">
							<label
								class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
								for="password"
							>
								Password
							</label>
							<input
								class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
								id="password"
								name="password"
								type="password"
								placeholder="******************"
							/>
						</div>
					</div>
					<div class="flex flex-wrap -mx-3 mb-6">
						<div class="w-1/2 px-3">
							<label
								class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
								for="grid-business-name"
							>
								Business Name
							</label>
							<input
								class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
								id="grid-business-name"
								type="text"
								placeholder="Acme Corp."
							/>
						</div>
						<div class="w-1/2 px-3">
							<label
								class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
								for="grid-business-phone"
							>
								Business Phone
							</label>
							<input
								class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
								id="grid-business-name"
								type="text"
								placeholder="(785) 867-5309"
							/>
						</div>
					</div>
					<div class="flex flex-wrap -mx-3 mb-6">
						<div class="w-full px-3">
							<label
								class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
								for="grid-business-about"
							>
								About Business
							</label>
							<textarea
								class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
								id="grid-business-about"
								rows="3"
								placeholder="Please tell us a little about your business."
							></textarea>
						</div>
					</div>
					<div class="flex flex-wrap -mx-3 mb-2">
						<div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
							<label
								class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
								for="grid-city"
							>
								City
							</label>
							<input
								class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
								id="grid-city"
								type="text"
								placeholder="Hays"
							/>
						</div>
						<div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
							<label
								class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
								for="grid-zip"
							>
								Zip
							</label>
							<input
								class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
								id="grid-zip"
								type="text"
								placeholder="67601"
							/>
						</div>
					</div>
				</div>
				<div class="flex justify-end mt-4">
					<a href="/signin">
						<button
							class="bg-blue-500 hover:bg-blue-400 px-4 py-2 rounded text-white focus:outline-none mr-2"
						>
							Have an Account? Sign In.
						</button>
					</a>
					<button
						type="submit" value="Sign Up"
						class="bg-green-500 hover:bg-green-400 px-4 py-2 rounded text-white focus:outline-none "
					>
						Create Account
					</button>
				</div>
			</form>
		</div>
	</div>
</main>

<footer
	class="text-center bg-gray-200 container pb-8 max-w-6xl shadow-xl mx-auto pin-b"
>
	<%- include('../partials/footer') %>
</footer>
</body>
</html>
