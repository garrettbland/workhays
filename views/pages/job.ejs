<%- include('../partials/page_start', {title:job.title}) %>

<div class="max-w-4xl mx-auto my-24">

	<div class="mb-6 px-3 lg:px-0">
		<a href="/" class="flex items-center text-blue-500 hover:underline text-base">
			<div><span class="mdi mdi-arrow-left"/></div>
			<div class="ml-2">Back to All Listings</div>
		</a>
	</div>

	<div class="bg-white rounded-none md:rounded shadow-md w-full overflow-hidden">
		<div class="border-b border-gray-200 p-3 flex flex-wrap justify-between items-center">
			<div class="w-full md:w-4/5">
				<div class="text-xl font-bold leading-6">
					<%= job.title %>
				</div>
				<div class="antialiased mb-3 md:mb-2">
					Posted <%= moment.utc(job.createdAt).local().format('ll') %>
				</div>
				<div class="flex items-center flex-row flex-wrap">
					<% if (job.application_link) { %>
						<a href="<%= job.application_link %>" target="_blank" class="flex items-center flex-row justify-center w-full md:w-auto bg-blue-500 text-white hover:bg-blue-600 transition duration-75 ease-in-out rounded px-4 py-2 md:py-1 md:text-sm border border-blue-500 hover:border-blue-600 text-center text-sm md:mr-3 mb-3 md:mb-0">
							<span>
								<svg class="w-4 h-4 mr-1" viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="1.4" fill="none" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
							</span>
							Apply Online
						</a>
					<% } %>
					<% if (job.employer.dataValues.phone) { %>
						<a href="tel:<%= job.employer.dataValues.phone %>" class="flex items-center flex-row justify-center w-full md:w-auto text-blue-500 hover:bg-blue-500 transition duration-75 ease-in-out rounded px-4 py-2 md:py-1 md:text-sm border border-blue-500 hover:border-blue-500 text-center hover:text-white text-sm md:mr-3 mb-3 md:mb-0">
							<span>
								<svg class="w-4 h-4 mr-1" viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="1.4" fill="none" stroke-linecap="round" stroke-linejoin="round" ><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>	
							</span>
							<span class="flex md:hidden">
								Call
							</span>
							<span class="hidden md:flex">
								<%= job.employer.dataValues.phone %>
							</span>
						</a>
					<% } %>
					<% if (job.employer.dataValues.email) { %>
						<a href="mailto:<%= job.employer.dataValues.email %>" class="flex items-center flex-row justify-center w-full md:w-auto text-blue-500 hover:bg-blue-500 transition duration-75 ease-in-out rounded px-4 py-2 md:py-1 md:text-sm border border-blue-500 hover:border-blue-500 text-center hover:text-white text-sm md:mr-3 mb-3 md:mb-0">
							<span>
								<svg class="w-4 h-4 mr-1" viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="1.4" fill="none" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>	
							</span>
							<span class="flex md:hidden">
								Email
							</span>
							<span class="hidden md:flex">
								<%= job.employer.dataValues.email %>
							</span>
						</a>
					<% } %>
					<a href="/employers/<%= job.employer.dataValues.id %>" class="flex items-center flex-row justify-center w-full md:w-auto text-blue-500 hover:bg-blue-500 transition duration-75 ease-in-out rounded px-4 py-2 md:py-1 md:text-sm border border-blue-500 hover:border-blue-500 text-center hover:text-white text-sm md:mr-3 mb-3 md:mb-0">
						View Employer
						<span>
							<svg class="w-4 h-4 ml-1" viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
						</span>
					</a>
				</div>
			</div>
			<!-- <div class="w-full md:w-1/5 flex justify-end my-6 md:my-0">
				<a href="#" class="w-full lg:w-auto bg-blue-500 text-white hover:bg-blue-600 transition duration-75 ease-in-out rounded px-6 py-2 border border-blue-500 hover:border-blue-600 text-center">
					Apply Online
				</a>
			</div> -->
		</div>
		<div class="p-3">
			<div class="flex flex-wrap w-full">
				<div class="w-full lg:w-1/2 mb-5">
					<div class="text-sm leading-5 font-medium text-gray-500">
						Position Title
					</div>
					<div class="mt-1 text-sm leading-5 text-gray-900">
						<%= job.title %>
					</div>
				</div>
				<div class="w-full lg:w-1/2 mb-5">
					<div class="text-sm leading-5 font-medium text-gray-500">
						Full time / Part Time
					</div>
					<div class="mt-1 text-sm leading-5 text-gray-900">
						<%= job.job_type === 'full_time' ? 'Full Time' : 'Part Time' %>
					</div>
				</div>
				<div class="w-full lg:w-1/2 mb-5">
					<div class="text-sm leading-5 font-medium text-gray-500">
						Employer
					</div>
					<div class="mt-1 text-sm leading-5 text-gray-900">
						<%= job.employer.dataValues.title %>
					</div>
				</div>
				<div class="w-full lg:w-1/2 mb-5">
					<div class="text-sm leading-5 font-medium text-gray-500">
						Employer Contact
					</div>
					<div class="mt-1 text-sm leading-5 text-gray-900">
						<%= job.employer.dataValues.contact %>
					</div>
				</div>
				<div class="w-full">
					<div class="text-sm leading-5 font-medium text-gray-500">
						Description
					</div>
					<div class="mt-1 text-base leading-6 text-gray-900">
						<%- job.description %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<%- include('../partials/page_end') %>