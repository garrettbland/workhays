<%- include('../partials/page_start', {title: 'Work Hays'}) %>

<div class="max-w-4xl mx-auto">
	<div class="mt-24 px-3 lg:px-0 pb-6">
		<div class="text-xl font-bold leading-6">
			ðŸ’¼ Current Job Openings
		</div>
		<div class="antialiased">
			Job openings in Hays, KS and surrounding communities.
		</div>
	</div>
</div>

<div class="max-w-4xl mx-auto">
	<div class="my-6">
		<div class="border lg:border-none border-gray-200">
			<ul>
				<% jobs.forEach(function(job,index) { %>
					<li>
						<a href="/jobs/<%= job.id %>" class="bg-white flex flex-row justify-between items-center px-3 py-3 lg:py-2 lg:mb-2 border-gray-200 hover:cursor transition ease-in-out duration-75 group lg:rounded lg:shadow-md z-30 <%= index !== 0 ? 'border-t lg:border-none' : null%>">
							<div class="flex-1 overflow-hidden">
								<div class="font-bold text-black truncate lg:text-lg group-hover:text-blue-500 group-hover:underline">
									<%= job.title %>
								</div>
								<div class="antialiased flex flex-row truncate text-gray-800">
									<div>
										<%= job.employer.title %>
									</div>
									<div class="mx-2 text-gray-500">
										|
									</div>
									<div>
										Posted <%= moment.utc(job.createdAt).local().format('ll') %>
									</div>
								</div>
							</div>
							<div class="flex justify-end items-center">
								<div class="transition ease-in-out duration-75 text-white group-hover:text-gray-600 text-sm mr-2 hidden lg:block">
									View Details
								</div>
								<svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><polyline points="9 18 15 12 9 6"></polyline></svg>
							</div>
						</a>
					</li>
				<% }) %>
			</ul>
		</div>
		<div class="flex justify-between mt-4 px-3 md:px-0 items-center">
			<div>
				<p class="text-sm leading-5 text-gray-700">
					Page
					<span class="font-bold">
						<%= current_page %>
					</span>
					of
					<span class="font-bold">
						<%= pages %>
					</span>
				  </p>
			</div>
			<div>
				<% if(current_page <= pages && current_page !== 1) { %>
					<a href="/?page=<%= current_page - 1 %>" class="relative inline-flex items-center px-3 py-2 border border-gray-300 text-sm leading-5 font-medium rounded text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150">
						Previous
					</a>
				<% } else { %>
					<button disabled class="relative inline-flex items-center px-3 py-2 border border-gray-300 text-sm leading-5 font-medium rounded text-gray-700 bg-white focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150 cursor-not-allowed opacity-50">
						Previous
					</button>
				<% } %>
	
				<% if(current_page < pages) { %>
					<a href="/?page=<%= current_page + 1 %>" class="ml-3 relative inline-flex items-center px-3 py-2 border border-gray-300 text-sm leading-5 font-medium rounded text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150">
						Next
					  </a>
				<% } else { %>
					<button disabled class="ml-3 relative inline-flex items-center px-3 py-2 border border-gray-300 text-sm leading-5 font-medium rounded text-gray-700 bg-white focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150 cursor-not-allowed opacity-50">
						Next
					</button>
				<% } %>
			</div>
		</div>
	</div>
</div>

<div class="max-w-4xl mx-auto">
	<div class="my-12 px-3 lg:px-0 border-b border-gray-200 pb-6">
		<div class="text-xl font-bold leading-6">
			ðŸ“¬ Want email updates?
		</div>
		<div class="antialiased">
			Sign up for our weekly email letting you know about the latest job openings.
		</div>
		<div class="mt-4 w-full md:max-w-lg flex items-center flex-wrap">
			<input class="mr-0 lg:mr-3 mb-3 lg:mb-0 w-full lg:w-2/3 rounded border border-gray-200 px-3 py-2 bg-white focus:bg-white focus:border-blue-500 transition ease-in-out duration-150" placeholder="Your Email" />
			<button class="w-full lg:w-auto bg-blue-500 text-white hover:bg-blue-600 transition duration-75 ease-in-out rounded px-6 py-2 border border-blue-500 hover:border-blue-600">
				Sign Up
			</button>
		</div>
	</div>
</div>

<%- include('../partials/page_end') %>