<%- include('../partials/page_start', {title: 'Work Hays'}) %>

<div class="max-w-4xl mx-auto">
	<div class="mt-12 px-3 lg:px-0 pb-6">
		<div class="text-xl font-bold leading-6">
			ðŸ’¼ Current Job Openings
		</div>
		<div class="antialiased">
			Job openings in Hays, KS and surrounding communities.
		</div>
	</div>

	<div class="my-6">
		<div class="bg-white overflow-hidden lg:rounded-lg border border-gray-200">
			<ul>
				<% jobs.forEach(function(job,index) { %>
					<li>
						<a href="/jobs/<%= job.id %>" class="flex flex-row justify-between items-center px-3 py-3 lg:py-2 border-gray-200 hover:bg-gray-100 hover:cursor transition ease-in-out duration-150 group <%= index !== 0 ? 'border-t' : null%>">
							<div class="flex-1">
								<div class="font-bold text-black truncate">
									<%= job.title %>
								</div>
								<div class="antialiased flex flex-row truncate text-gray-800">
									<div>
										<%= job.employer.title %>
									</div>
									<div class="mx-2 text-gray-500">
										|
									</div>
									<div>
										Posted <%= moment.utc(job.createdAt).local().format('ll') %>
									</div>
								</div>
							</div>
							<div class="flex justify-end items-center">
								<div class="transition ease-in-out duration-150 text-white group-hover:text-gray-600 text-sm mr-2 hidden lg:block">
									View Details
								</div>
								<svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><polyline points="9 18 15 12 9 6"></polyline></svg>
							</div>
						</a>
					</li>
				<% }) %>
			</ul>
		</div>
	</div>

	<div class="my-12 px-3 lg:px-0 border-b border-gray-200 pb-6">
		<div class="text-xl font-bold leading-6">
			ðŸŽ‰ Want email updates?
		</div>
		<div class="antialiased">
			Sign up for our weekly email letting you know about the latest job openings.
		</div>
		<div class="mt-4 max-w-sm">
			<input class="w-full rounded border border-gray-200 px-3 py-2 bg-gray-50 focus:bg-white focus:border-blue-500 transition ease-in-out duration-150" placeholder="Your Email" />
		</div>
	</div>
</div>

<div class="flex-1 mx-auto pt-32 container max-w-6xl p-12 bg-gray-200 shadow-xl">
	<%- include('../partials/jobs', { jobs, count, pages, current_page, moment }) %>
</div>

<%- include('../partials/page_end') %>