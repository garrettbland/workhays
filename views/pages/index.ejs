<%- include('../partials/page_start',{title: 'Current Job Openings', description: 'Browse current job openings in Hays, KS and surrounding communities.'}) %>

<div class="max-w-4xl mx-auto px-4 lg:px-0">
    <div class="bg-white shadow rounded -mt-8 overflow-hidden">
        <ul>
            <% jobs.forEach(function(job,index) { %>
                <li class="<%= index === 0 ? 'border-t-none' : 'border-t-2' %> border-gray-100 hover:bg-gray-50 hover:text-blue-600 transform transition ease-in-out duration-75 group">
                    <a href="/jobs/<%= job.id %>" class="block w-full p-4 flex justify-between items-center">
                        <div class="w-4/5 transform transition ease-in-out duration-150 group-hover:translate-x-1">
                            <div class="text-xs text-gray-500 leading-none">
                                <%= job.employer.title %>
                            </div>
                            <div class="font-bold truncate">
                                <%= job.title %>
                            </div>
                        </div>
                        <div class="flex flex-1 items-center justify-end">
                            <span class="text-sm antialiased mr-2 hidden md:inline-block">
                                <%= moment.utc(job.createdAt).local().format('ll')%>
                            </span>
                            <i data-feather="arrow-right" class=""></i>
                        </div>
                    </a>
                </li>
            <% }) %>
        </ul>
    </ul>
</div>

<div>
    <div class="flex justify-between mt-4 md:px-0 items-center">
        <div class="text-sm">
            <p class="text-gray-600">
                Page
                <span class="font-bold text-blue-500">
                    <%= current_page %>
                </span>
                of
                <span class="font-bold text-blue-500">
                    <%= pages %>
                </span>
            </p>
        </div>
        <div>
            <% if(current_page <= pages && current_page !== 1) { %>
            <a
                href="/?page=<%= current_page - 1 %>"
                class="relative inline-flex items-center px-3 py-2 text-sm font-medium rounded text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-500 active:bg-gray-100 active:text-gray-700 transition transform ease-in-out duration-150 shadow hover:-translate-y-0.1"
            >
                Previous
            </a>
            <% } else { %>
            <div
                disabled
                class="relative inline-flex items-center px-3 py-2 text-sm font-medium rounded text-gray-700 bg-white cursor-not-allowed opacity-50"
            >
                Previous
            </div>
            <% } %> 
            <% if(current_page < pages) { %>
            <a
                href="/?page=<%= current_page + 1 %>"
                class="ml-3 relative inline-flex items-center px-3 py-2 text-sm font-medium rounded text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-500 active:bg-gray-100 active:text-gray-700 transition transform ease-in-out duration-150 shadow hover:-translate-y-0.1"
            >
                Next
            </a>
            <% } else { %>
            <div
                disabled
                class="ml-3 relative inline-flex items-center px-3 py-2 text-sm font-medium rounded text-gray-700 bg-white cursor-not-allowed opacity-50 shadow"
            >
                Next
            </div>
            <% } %>
        </div>
    </div>
</div>

<div class="max-w-4xl mx-auto">
    <div class="my-12 px-3 lg:px-0">
        <div class="text-2xl font-bold leading-6">
            Want email updates?
        </div>
        <div class="antialiased">
            Sign up for our weekly email letting you know about the latest job
            openings.
        </div>
        <div class="mt-4 w-full md:max-w-lg flex items-center flex-wrap">

            <input placeholder="Your email" class="mr-0 lg:mr-3 mb-3 lg:mb-0 w-full lg:w-2/3 rounded px-3 py-2 shadow focus:outline-none focus:shadow-outline-blue" />

            <button class="w-full lg:w-auto px-3 py-2 text-sm font-medium rounded text-white bg-green-400 focus:outline-none focus:shadow-outline-blue transition ease-in-out duration-150 shadow border border-green-400 transition transform duration-75 ease-in-out hover:-translate-y-0.1">
                Sign Up
            </button>

            <!-- <input
                class="mr-0 lg:mr-3 mb-3 lg:mb-0 w-full lg:w-2/3 rounded border border-gray-200 px-3 py-2 bg-white focus:bg-white focus:border-blue-500 transition ease-in-out duration-150 focus:outline-none"
                placeholder="Your Email"
            />
            <button
                class="w-full lg:w-auto bg-blue-500 text-white hover:bg-blue-600 transition duration-75 ease-in-out rounded px-6 py-2 border border-blue-500 hover:border-blue-600"
            >
                Sign Up
            </button> -->
        </div>
    </div>
</div>

<%- include('../partials/page_end') %>
