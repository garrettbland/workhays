<%- include('../../partials/page_start', {title: 'Advertise with us', description: 'Advertisement opportunies availabe with Work Hays. Drive local traffic to your business & generate more leads.'}) %>

<div x-data="contact()" x-init="searchUrlParameters" class="max-w-2xl mx-auto mt-8">

    <div x-show="showSuccessMessage" class="mb-8 p-4 bg-green-400 rounded shadow text-white flex items-center mx-4 md:mx-0"
        style="display:none;">
        <div class="mr-4 ">
            <i data-feather="check-circle" class="w-5 h-5"></i>
        </div>
        <div>
            <p class="font-bold leading-5">
                Success
            </p>
            <p class="text-base leading-tight">
                Your form has been successfully submitted.
            </p>
        </div>
    </div>

    <div>
        <div class="text-lg font-bold pb-2 px-4 lg:px-0">
            Advertising with Work Hays
        </div>
        <div class="leading-7 text-gray-900 antialiased mb-8">
            <p class="mb-4 px-4 lg:px-0">
                We are excited to now offer advertising opportunities with Work Hays. Our site
                features over <strong>160</strong> employers listing their open positions and averaging <strong>46.7k</strong> pageviews a month.
            </p>
            <p class="mb-6 px-4 lg:px-0">
                Pricing starts at $35.00/mo for a basic ad placement. Your ad will run for
                30 consecutive days. Discounts available for extended terms.
            </p>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6 mx-4 lg:mx-0">
                <div class="bg-white rounded shadow p-4">
                    <div class="uppercase text-sm tracking-widest font-bold text-gray-700">
                        Basic
                    </div>
                    <div class="text-xl text-indigo-500 mb-3">
                        $35/month
                    </div>
                    <div>
                        <ul class="text-sm antialiased leading-5 list-inside list-disc">
                            <li>Native Text Ad</li>
                            <li>Brandable Colors</li>
                            <li>Custom Action</li>
                            <li class="line-through">Logo</li>
                            <li class="line-through">Custom Fonts</li>
                            <li class="line-through">Background Image</li>
                        </ul>
                    </div>
                </div>
                <div class="bg-white rounded shadow p-4">
                    <div class="uppercase text-sm tracking-widest font-bold text-gray-700">
                        Advanced
                    </div>
                    <div class="text-xl text-indigo-500 mb-3">
                        $50/month
                    </div>
                    <div>
                        <ul class="text-sm antialiased leading-5 list-inside list-disc">
                            <li>Native Text Ad</li>
                            <li>Brandable Colors</li>
                            <li>Custom Action</li>
                            <li>Logo</li>
                            <li>Custom Fonts</li>
                            <li>Background Image</li>
                        </ul>
                    </div>
                </div>
                <div class="bg-white rounded shadow p-4">
                    <div class="uppercase text-sm tracking-widest font-bold text-gray-700">
                        Premium
                    </div>
                    <div class="text-xl text-indigo-500 mb-3">
                        $150/month
                    </div>
                    <div>
                        <ul class="text-sm antialiased leading-5 list-inside list-disc">
                            <li>Full Basic Plan</li>
                            <li>Full Advanced Plan</li>
                            <li>Full Customization</li>
                            <li>Mupltiple Sizes</li>
                        </ul>
                        <p class="text-xs text-gray-700 leading-tight mt-2">
                            With this plan, we also offer one (1) professionally
                            designed ad for mobile and desktop.
                        </p>
                    </div>
                </div>
            </div>
            <p class="mb-6 px-4 lg:px-0">
                Please fill out the form below with the desired plan to get started. If you have any special requests or are a non-profit, please
                let us know, as we do offer free advertising for certain organizations. We look forward to working
                with you.
            </p>
        </div>
    </div>

    <div x-show="showErrorMessage" class="mb-8 p-4 bg-red-500 rounded shadow text-white flex items-center mx-4 md:mx-0"
        style="display:none;">
        <div class="mr-4 ">
            <i data-feather="alert-circle" class="w-5 h-5"></i>
        </div>
        <div>
            <p class="font-bold leading-5">
                Error
            </p>
            <p class="text-base leading-tight">
                Something went wrong. Make sure all required fields are complete and accurate.
            </p>
        </div>
    </div>

    <div x-show="showErrorEmailMessage" class="mb-8 p-4 bg-red-500 rounded shadow text-white flex items-center mx-4 md:mx-0"
        style="display:none;">
        <div class="mr-4 ">
            <i data-feather="alert-circle" class="w-5 h-5"></i>
        </div>
        <div>
            <p class="font-bold leading-5">
                Error
            </p>
            <p class="text-base leading-tight">
                Please provide a valid email address
            </p>
        </div>
    </div>

    <form x-on:submit="return validateForm()" method="post" action="/contact">
        <input type="checkbox" name="contact_me_by_phone_only" value="1" style="display:none !important" tabindex="-1"
            autocomplete="off">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 px-4 md:px-0">
            <div>
                <label class="text-sm text-gray-600 mb-2">
                    * Name
                </label>
                <input name="first" x-model="form.first"
                    class="mr-0 mb-3 w-full rounded px-3 py-2 shadow focus:outline-none focus:shadow-outline-blue"
                    type="text" placeholder="Jane" />
            </div>
            <div>
                <label class="text-sm text-gray-600 mb-2">
                    * Last Name
                </label>
                <input name="last" x-model="form.last"
                    class="mr-0 mb-3 w-full rounded px-3 py-2 shadow focus:outline-none focus:shadow-outline-blue"
                    type="text" placeholder="Doe" />
            </div>
            <div>
                <label class="text-sm text-gray-600 mb-2">
                    * Email Address
                </label>
                <input name="email" x-model="form.email"
                    class="mr-0 mb-3 w-full rounded px-3 py-2 shadow focus:outline-none focus:shadow-outline-blue"
                    type="email" placeholder="jane@example.com" />
            </div>
            <div>
                <label class="text-sm text-gray-600 mb-2">
                    Business Name
                </label>
                <input name="phone"
                    class="mr-0 mb-3 w-full rounded px-3 py-2 shadow focus:outline-none focus:shadow-outline-blue"
                    type="text" placeholder="Example Co." />
            </div>
            <div class="md:col-span-2">
                <label class="text-sm text-gray-600 mb-2">
                    * Message
                </label>
                <textarea name="message" x-model="form.message" placeholder="How can we help grow your business?" rows="3"
                    class="mr-0 mb-3 w-full rounded px-3 py-2 shadow focus:outline-none focus:shadow-outline-blue"></textarea>
                <p class="text-xs text-gray-700">
                    (*) denotes a required field
                </p>
            </div>
            <div>
                <button
                    class="w-full lg:w-auto px-3 py-2 text-sm font-medium rounded text-white bg-green-400 focus:outline-none focus:shadow-outline-blue transition ease-in-out duration-150 shadow border border-green-400 transition transform duration-75 ease-in-out hover:-translate-y-0.1">
                    Submit
                </button>
            </div>
        </div>
    </form>
</div>

<script>
    function contact() {
        return {
            showSuccessMessage: false,
            showErrorMessage: false,
            showErrorEmailMessage: false,
            form: {
                first: '',
                last: '',
                email: '',
                message: ''
            },
            validateEmail: function (email) {
                var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
                return re.test(email);
            },
            validateForm: function () {

                var fields = this.form
                if (fields.first !== '' && fields.last !== '' && fields.email !== '' && fields.message !== '') {
                    if (this.validateEmail(fields.email)) {
                        return true
                    } else {
                        this.showErrorEmailMessage = true
                        this.showErrorMessage = false
                        return false
                    }
                } else {
                    this.showErrorEmailMessage = false
                    this.showErrorMessage = true
                    return false
                }

            },
            searchUrlParameters: function () {
                var url = new URL(window.location.href)
                var successMessage = url.searchParams.get("success")
                var errorMessage = url.searchParams.get("error")

                // if success
                if (successMessage) {
                    this.showSuccessMessage = true
                    this.showErrorMessage = false
                }

                // if error
                if (errorMessage) {
                    this.showErrorMessage = true
                    this.showSuccessMessage = false
                }
            }
        }
    }
</script>

<%- include('../../partials/page_end') %>