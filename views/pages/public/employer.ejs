<%- include('../../partials/page_start', {title: employer.title, description: `Learn more about ${employer.title }, visit their website, or contact them today.`}) %>

<div class="max-w-4xl mx-auto px-4 lg:px-0">
    <div class="grid grid-cols-1 md:grid-cols-6 gap-4">
        <div class="col-span-1 md:col-span-4 md:pr-4 mb-12 md:mb-0 order-3 md:order-1">
            <div class="w-48 h-48 bg-white bg-center bg-cover rounded-full shadow border-4 border-white items-center justify-center text-center flex mt-8 mx-auto md:ml-0 md:-mt-8 mb-8" style="background-image:url('<%= employer.logo_url %>')">
            </div>
            <label class="text-sm text-gray-500">
                About
            </label>
            <div class="leading-7 text-gray-900 antialiased">
                <%- employer.description %>
            </div>
        </div>
        <div class="col-span-1 md:col-span-2 -mt-8 order-1 md:order-3">
            <div class="p-4 bg-white rounded shadow">
                <div class="">
                    <label class="text-sm text-gray-500">
                        Employer Contact
                    </label>
                    <div class="text-sm text-gray-900">
                        <%= employer.contact %>
                    </div>
                </div>
                <% if (employer.phone) { %>
                <div class="mt-6">
                    <label class="text-sm text-gray-500">
                        Phone
                    </label>
                    <div class="text-sm text-gray-900">
                        <a href="tel:<%= employer.phone %>" class="text-blue-600 hover:underline">
                            <%= employer.phone %>
                        </a>
                    </div>
                </div>
                <% } %>
                <% if (employer.email) { %>
                    <div class="mt-6">
                        <label class="text-sm text-gray-500">
                            Email
                        </label>
                        <div class="text-sm text-gray-900">
                            <a href="mailto:<%= employer.email %>" class="text-blue-600 hover:underline">
                                <%= employer.email %>
                            </a>
                        </div>
                    </div>
                <% }%>
                
                <% if (employer.website_url) { %>
                    <div class="mt-6">
                        <label class="text-sm text-gray-500">
                            Website
                        </label>
                        <div class="text-sm text-gray-900 truncate">
                            <a href="<%= employer.website_url %>" target="_blank" class="text-blue-600 hover:underline">
                                <%= employer.website_url %>
                            </a>
                        </div>
                    </div>
                <% }%>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/page_end') %>
