<%- include('../../partials/page_start', {title: 'Business', description: 'Manage your business profile. Update contact info, logo, and more.'}) %>

<style>
trix-toolbar [data-trix-attribute='quote'],
trix-toolbar [data-trix-attribute='code'],
trix-toolbar [data-trix-button-group='file-tools'] {
  display: none;
}
</style>

<div class="max-w-4xl mx-auto mt-12">
	<div class="grid grid-cols-1 md:grid-cols-8 gap-4">
		<%- include('../../partials/admin_sidebar') %>
		<div class="col-span-1 md:col-span-6">
			<!-- content -->
			<form method="POST" action="/employers/edit/<%= employer.id %>">
			<div class="flex flex-wrap justify-between items-center mb-4 px-4 md:px-0">
				<div class="w-full md:w-2/3 mb-3 md:mb-0">
					<div class="text-lg font-semibold">
						Business Profile
					</div>
					<div class="antialiased text-sm">
						Manage your public business page information. Some fields are required
						to post jobs.
					</div>
				</div>
				<div class="w-full md:w-auto">
					<button type="submit" class="block px-3 py-2 text-center text-sm font-medium rounded text-white bg-blue-500 focus:outline-none focus:shadow-outline-blue transition ease-in-out duration-150 shadow border border-blue-500 transition transform duration-75 ease-in-out hover:-translate-y-0.1">
						Save Changes
					</button>
				</div>
			</div>
			<div class="grid grid-cols-1 md:grid-cols-4 gap-4 px-4 lg:px-0">
				<div class="col-span-2">
					<label class="text-sm text-gray-600 mb-2">
						* Business Name
					</label>
					<input name="title" value="<%= employer.title %>" class="mr-0 mb-3 w-full rounded px-3 py-2 shadow focus:outline-none focus:shadow-outline-blue" type="text" placeholder="Acme Inc." />
				</div>
				<div class="col-span-2">
					<label class="text-sm text-gray-600 mb-2">
						* Contact Name
					</label>
					<input name="contact" value="<%= employer.contact %>" class="mr-0 mb-3 w-full rounded px-3 py-2 shadow focus:outline-none focus:shadow-outline-blue" type="text" placeholder="Jane Doe" />
				</div>
				<div class='col-span-2'>
					<label class="text-sm text-gray-600 mb-2">
						* Contact Email
					</label>
					<input name="email" value="<%= employer.email %>" class="mr-0 mb-3 w-full rounded px-3 py-2 shadow focus:outline-none focus:shadow-outline-blue" type="text" placeholder="jane@acme.com" />
				</div>
				<div class="col-span-2">
					<label class="text-sm text-gray-600 mb-2">
						* Contact Phone Number
					</label>
					<input name="phone" value="<%= employer.phone %>" class="mr-0 mb-3 w-full rounded px-3 py-2 shadow focus:outline-none focus:shadow-outline-blue" type="text" placeholder="567-234-4551" />
				</div>
				<div class="col-span-1 md:col-span-4">
					<label class="text-sm text-gray-600 mb-2">
						* About Business
					</label>
					<input value="<%= employer.description %>" id="description_input" type="hidden" name="description">
					<trix-editor input="description_input" class="bg-white border-none shadow rounded focus:shadow-outline-blue px-3 py-2" placeholder="Brag about your business. Let people know what it is your company or business does."></trix-editor>
				</div>

				<!-- non required fields -->
				<div class="col-span-2">
					<label class="text-sm text-gray-600 mb-2">
						Logo URL
					</label>
					<input name="logo_url" value="<%= employer.logo_url %>" class="mr-0 mb-3 w-full rounded px-3 py-2 shadow focus:outline-none focus:shadow-outline-blue" type="text" placeholder="https://yourwebsite.com/logo.jpg" />
				</div>
				<div class="col-span-2">
					<label class="text-sm text-gray-600 mb-2">
						Website URL
					</label>
					<input name="website_url" value="<%= employer.website_url %>" class="mr-0 mb-3 w-full rounded px-3 py-2 shadow focus:outline-none focus:shadow-outline-blue" type="text" placeholder="https://yourwebsite.com" />
				</div>
				<div class='col-span-2'>
					<label class="text-sm text-gray-600 mb-2">
						Facebook Page URL
					</label>
					<input name="facebook_url" value="<%= employer.facebook_url %>" class="mr-0 mb-3 w-full rounded px-3 py-2 shadow focus:outline-none focus:shadow-outline-blue" type="text" placeholder="https://facebook.com/yourpage" />
				</div>
				<div class="col-span-2">
					<label class="text-sm text-gray-600 mb-2">
						Twitter Page URL
					</label>
					<input name="twitter_url" value="<%= employer.twitter_url %>" class="mr-0 mb-3 w-full rounded px-3 py-2 shadow focus:outline-none focus:shadow-outline-blue" type="text" placeholder="https://twitter.com/yourpage" />
				</div>
			</div>
			<div class="flex flex-wrap justify-between items-center mt-4 px-4 md:px-0">
				<div class="w-full md:w-2/3 mb-3 md:mb-0">
					
				</div>
				<div class="w-full md:w-auto">
					<button type="submit" class="block px-3 py-2 text-center text-sm font-medium rounded text-white bg-blue-500 focus:outline-none focus:shadow-outline-blue transition ease-in-out duration-150 shadow border border-blue-500 transition transform duration-75 ease-in-out hover:-translate-y-0.1">
						Save Changes
					</button>
				</div>
			</div>
			</form>
		</div>
	</div>
</div>


<%- include('../../partials/page_end') %>