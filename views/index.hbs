<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

<p>{{uppercase title}}</p>

<div>
    {{> nav}}
</div>

<div class="bg-red-500">
    <h1>Jobs</h1>
    <ul>
        {{#if jobs}}
        {{#each jobs}}
        <li>{{title}}</li>
        {{/each}}
        {{else}}
        <li>No itesm to show</li>
        {{/if}}
    </ul>
</div>

<div x-data="{ showDropdown: false }">
    Dropdown example
    <button @click="showDropdown = true" class="bg-blue-500 px-4 py-2 rounded">
        Click to toggle dropdown
    </button>
    <div x-show="showDropdown" @click.away="showDropdown = false" class="bg-gray-500">
        Dropdown content
    </div>
</div>