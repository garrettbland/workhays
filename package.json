{
    "name": "workhays",
    "version": "2.0.0",
    "private": true,
    "scripts": {
        "show-projects": "npx nx show projects",
        "start:web": "npx nx run next:dev",
        "test": "npx nx run-many -t test",
        "build": "nx exec -- next build",
        "lint": "nx exec -- next lint",
        "build:utilities": "npx nx run utilities:build",
        "build:next": "npx nx run next:build",
        "dev": "npm run open-browser && npx nx run-many -t dev -p arc next",
        "open-browser": "open http://localhost:3000"
    },
    "devDependencies": {
        "@nx/js": "^16.8.1",
        "nx": "16.8.1",
        "prettier": "^2.8.7"
    },
    "prettier": {
        "semi": false,
        "bracketSpacing": true,
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4,
        "trailingComma": "es5"
    },
    "workspaces": [
        "packages/*"
    ]
}
