{
  "name": "workhays",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "buildcss": "tailwind build public/stylesheets/tailwind.css -o public/stylesheets/style.css",
    "purgecss": "purgecss --config ./purgecss.config.js --output public/stylesheets",
    "uglifycss": "uglifycss public/stylesheets/style.css > public/stylesheets/style.min.css",
    "dev": "npm run buildcss && nodemon app.js",
    "prod": "export NODE_ENV=production && npm run buildcss && npm run purgecss && npm run uglifycss && nodemon app.js"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.19.0",
    "connect-flash": "^0.1.1",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.1",
    "express": "~4.16.1",
    "express-session": "^1.17.0",
    "http-errors": "~1.6.3",
    "mailgun-js": "^0.22.0",
    "moment": "^2.24.0",
    "morgan": "~1.9.1",
    "mysql": "^2.18.1",
    "mysql2": "^2.1.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "sequelize": "^5.21.4",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/ui": "^0.1.3",
    "nodemon": "^2.0.2",
    "prettier": "1.19.1",
    "purgecss": "^2.0.5",
    "tailwindcss": "^1.2.0",
    "uglifycss": "0.0.29"
  }
}
