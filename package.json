{
    "name": "workhays",
    "version": "2.0.0",
    "private": true,
    "scripts": {
        "clean": "rimraf .parcel-cache dist",
        "arc-init": "npx arc init",
        "arc-hydrate": "npx arc hydrate",
        "dev": "run-p dev:**",
        "dev:clean": "npm run clean",
        "dev:arc": "npx arc sandbox",
        "dev:apps": "npx parcel watch",
        "build-apps": "npm run clean && npx parcel build",
        "arc:deploy-staging": "npx arc deploy --tags project=workhays-staging --verbose",
        "arc:deploy-staging-dry": "npx arc deploy --tags project=workhays-staging --verbose --dry-run",
        "arc:deploy-prod": "npx arc deploy --production --tags project=workhays-production --verbose",
        "arc:deploy-prod-dry": "npx arc deploy --tags project=workhays-production --verbose --dry-run",
        "test": "jest"
    },
    "dependencies": {
        "@architect/functions": "~5.4.0",
        "amazon-cognito-identity-js": "^6.2.0",
        "squirrelly": "^9.0.0"
    },
    "devDependencies": {
        "@architect/architect": "^10.13.3",
        "@architect/plugin-typescript": "^1.1.1",
        "@architect/utils": "^3.1.9",
        "@faker-js/faker": "^7.6.0",
        "@tailwindcss/forms": "^0.5.4",
        "@tailwindcss/typography": "^0.5.9",
        "@types/aws-lambda": "^8.10.119",
        "@types/jest": "^29.5.3",
        "@types/node": "18.15.11",
        "@types/react": "^18.2.18",
        "@types/react-dom": "^18.2.7",
        "@types/squirrelly": "^7.1.2",
        "esbuild-jest": "^0.5.0",
        "jest": "^29.6.2",
        "npm-run-all": "^4.1.5",
        "parcel": "^2.9.3",
        "prettier": "^2.8.7",
        "process": "^0.11.10",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-hook-form": "^7.45.4",
        "rimraf": "^5.0.1",
        "tailwindcss": "^3.3.3"
    },
    "targets": {
        "admin": {
            "source": "./src/apps/admin/index.tsx",
            "distDir": "./public"
        },
        "contact": {
            "source": "./src/apps/contact/index.tsx",
            "distDir": "./public"
        }
    },
    "prettier": {
        "semi": false,
        "bracketSpacing": true,
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4,
        "trailingComma": "es5"
    }
}
