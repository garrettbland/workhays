{
    "name": "workhays",
    "version": "2.0.0",
    "private": true,
    "scripts": {
        "arc-init": "npx arc init",
        "arc-hydrate": "npx arc hydrate",
        "dev": "run-p dev:**",
        "dev:arc": "npx arc sandbox",
        "arc:deploy-staging": "cd arc && npx arc deploy --tags project=workhays-staging --verbose",
        "arc:deploy-dry": "cd arc && npx arc deploy --tags project=workhays-staging --verbose --dry-run",
        "arc:deploy-prod": "cd arc && npx arc deploy --production --tags project=workhays-production --verbose"
    },
    "dependencies": {
        "@architect/functions": "~5.4.0",
        "amazon-cognito-identity-js": "^6.2.0"
    },
    "devDependencies": {
        "@architect/architect": "^10.13.1",
        "@architect/plugin-typescript": "^1.1.1",
        "@architect/utils": "^3.1.9",
        "@faker-js/faker": "^7.6.0",
        "@types/aws-lambda": "^8.10.119",
        "@types/node": "18.15.11",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.8.7"
    },
    "prettier": {
        "semi": false,
        "bracketSpacing": true,
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4,
        "trailingComma": "es5"
    }
}
